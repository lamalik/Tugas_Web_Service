    public App_todo() {
        initComponents();
        setTitle("APLIKASI TO DO LIST");
                Object[] row= {"id","nama","aktifitas","deskripsi","tgl_deadline","status"};
        tabMode=new DefaultTableModel(null,row);

        jTable4.setModel(tabMode);
        jScrollPane1.getViewport().add(jTable4,null);
    }
    
    public void konekdatabase(){
    try{
        Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
        con=DriverManager.getConnection("jdbc:odbc:data_todo;uid='admin';pw='admin'");
    }
     catch (Exception e)
        {
            System.err.println("Exception: "+e.getMessage());
        }
    }
    
    public void hapustabel(){
        int row=tabMode.getRowCount();
        for(int i=0;i<row;i++){
            tabMode.removeRow(0);
        }
    }
    
    public void tampildataketabel(){
        hapustabel();
        try{
            String sql="Select * from data_todo ORDER BY id DESC";
            Statement stat=con.createStatement();
            ResultSet set=stat.executeQuery(sql);
            while (set.next()){
                id=set.getString("id");
                nama=set.getString("nama");
                aktifitas=set.getString("aktifitas");
                deskripsi=set.getString("deskripsi");
                tgl_deadline=set.getString("tgl_deadline");
                status=set.getString("status");
                String[] data={id,nama,aktifitas,deskripsi,tgl_deadline,status};
                tabMode.addRow(data);
            }
        }
        catch(Exception e){

        }

    }
    
    public void simpandata(){

      id=id.getText();
      nama=nama.getText();
      aktifitas=aktifitas.getText();
      deskripsi=deskripsi.getText();
      tgl_deadline=tgl_deadline.getText();
      status=status.getText();
        try{
            konekdatabase();
            Statement statement=con.createStatement();
            String sql="insert into data_todo values '"+id+"','"+nama+ "'," +
                    "'"+aktifitas+"','"+deskripsi+"','"+tgl_deadline+"','"+status+"');";
            statement.executeUpdate(sql);
       statement.close();
    }
        catch (Exception e){

        }

    }
    
    public void data(){
      id=id.getText();
      nama=nama.getText();
      aktifitas=aktifitas.getText();
      deskripsi=deskripsi.getText();
      tgl_deadline=tgl_deadline.getText();
      status=status.getText();
    }
    
    public void bersih(){
        id.setText("");
        nama.setText("");
        aktifitas.setText("");
        deskripsi.setText("");
        tgl_deadline.setText("");
        status=status.getText("");
    }

